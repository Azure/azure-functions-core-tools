<Project>

  <Import Project="$([MSBuild]::GetPathOfFileAbove('Directory.Build.targets', '$(MSBuildThisFileDirectory)../'))" />

  <Import Project="$(MSBuildThisFileDirectory)Build.Templates.targets" />
  <Import Project="$(MSBuildThisFileDirectory)Build.Distlib.targets" />
  <Import Project="$(MSBuildThisFileDirectory)Build.Telemetry.targets" />

  <Target Name="CopyGoZipToolOnPublish" AfterTargets="Publish">
    <Message Text="Copying 'gozip' to publish directory..." Importance="high" />
    <Copy SourceFiles="$(OutDir)\gozip$(ExeSuffix)" DestinationFolder="$(PublishDir)" />
  </Target>

</Project>